HOST mr01
    HostName mr01.accomodata.net
    User root
    ForwardAgent yes
    RequestTTY force
    PermitLocalCommand yes
    LocalCommand scp -r -q ~/.sshrc.d root@mr01.accomodata.net:/tmp/.bashrc_kenzo.d
    RemoteCommand bash --rcfile /tmp/.bashrc_kenzo.d/.sshrc; rm -rf /tmp/.bashrc_kenzo.d

